<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">
    <changeSet id="001.04" author="yushchenko" runOnChange="true">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="tb_user"/>
            </not>
        </preConditions>

        <createTable tableName="tb_user">
            <column name="user_id" type="INTEGER">
                <constraints primaryKey="true" primaryKeyName="tb_user_pk"/>
            </column>
            <column name="user_name" type="VARCHAR(32)"/>
            <column name="first_name" type="VARCHAR(32)"/>
            <column name="last_name" type="VARCHAR(32)"/>
            <column name="user_role" type="VARCHAR(32)"/>
        </createTable>
    </changeSet>
</databaseChangeLog>